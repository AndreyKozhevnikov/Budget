<dx:DXWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    x:Class="Budget.AddTagWindow"
    Title="AddTag" Height="350" Width="525"
    >

    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Height="32" Margin="28,34,0,0" VerticalAlignment="Top" Width="61"/>
        <dxe:TextEdit HorizontalAlignment="Left" Height="32" Margin="120,34,0,0" VerticalAlignment="Top" Width="150"
                      EditValue="{Binding CurrentTag.TagName,Mode=TwoWay}"/>
        <Button Content="AddTag" HorizontalAlignment="Left" Height="51" Margin="45,86,0,0" VerticalAlignment="Top"
                Width="189" Command="{Binding SaveTagCommand}"/>
    </Grid>
</dx:DXWindow>
